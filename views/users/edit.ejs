<% title = "Settings for " + user.username %>
<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h1>Update settings for <%= user.username%></h1>
            <form action="/users/<%= user._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%= user.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="bio" value="<%= user.bio %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="liquor" value="<%= user.liquor %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>    
            </form>
            <a href="/users/<%= user._id%>">Back</a>
        </div>
    </div>
</div>    

<% include ../partials/footer %>