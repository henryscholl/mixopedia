<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1>Edit Comment</h1>
            <form action="/cocktails/<%= cocktail_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" id="textarea" rows="4" type="text" name="comment[text]"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/cocktails/<%= cocktail_id %>">Back</a>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

<% include ../partials/footer %>