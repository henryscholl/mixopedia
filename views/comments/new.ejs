<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1>Add a comment for <%= cocktail.name %></h1>
            <form action="/cocktails/<%= cocktail._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" rows="4" id="textarea" type="text" name="comment[text]" placeholder="Enter your comment"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/cocktails/<%= cocktail._id %>">Back</a>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

<% include ../partials/footer %>