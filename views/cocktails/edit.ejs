<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1>Edit <%= cocktail.name %></h1>
            <form action="/cocktails/<%= cocktail._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="cocktail[name]" value="<%= cocktail.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cocktail[ingredients]" value="<%= cocktail.ingredients %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="3" id="textarea" name="cocktail[recipe]"><%= cocktail.recipe %></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cocktail[image]" value="<%= cocktail.image %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/cocktails">Back</a>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

<% include ../partials/footer %>