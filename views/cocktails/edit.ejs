<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= cocktail.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/cocktails/<%= cocktail._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="cocktail[name]" value="<%= cocktail.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cocktail[ingredients]" value="<%= cocktail.ingredients %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cocktail[recipe]" value="<%= cocktail.recipe %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cocktail[image]" value="<%= cocktail.image %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/cocktails">Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>