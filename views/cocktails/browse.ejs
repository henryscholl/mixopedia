<% include ../partials/header %>

  <div class="container">
      
    <h1>All cocktails</h1>
    <div class="row">
        <div class="col-md-6">
            <div id="new-button" class="navbar-left">
                <a class="btn btn-primary btn-block" href="/cocktails/new">Add New Cocktail</a>
            </div>
        </div>
        <div class="col-md-6">
            <form class="form-inline navbar-right" id="search-form" action="/cocktails/search" method="POST">
                <div class="form-group">
                    <input id="search-input" class="form-control" type="text" name="query" placeholder="Find a drink" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Search</button>
                </div>
            </form>
        </div>   
    </div>
    <div class="row" style="display:flex; flex-wrap: wrap;">
        
        <% cocktails.forEach(function(cocktail) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <a href="/cocktails/<%= cocktail._id %>">
                        <img src="<%= cocktail.image %>">
                    </a>
                    <div class="caption">
                        <h4><%= cocktail.name %></h4>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
  </div>

<% include ../partials/footer %>