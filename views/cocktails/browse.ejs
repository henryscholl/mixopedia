<% include ../partials/header %>

  <div class="container">
      
    <h3>All cocktails</h3>
    <form class="form-inline" id="search-form" action="/cocktails/search" method="POST">
        <div class="form-group">
            <input id="search-input" class="form-control" type="text" name="query" placeholder="Search for a drink or ingredient" required>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Submit</button>
        </div>
    </form>
    <div class="row" style="display:flex; flex-wrap: wrap;">
        
        <% cocktails.forEach(function(cocktail) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <a href="/cocktails/<%= cocktail._id %>">
                        <img src="<%= cocktail.image %>">
                    </a>
                    <div class="caption">
                        <h4><%= cocktail.name %></h4>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
  </div>

<% include ../partials/footer %>