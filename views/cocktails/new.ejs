<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new Cocktail</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/cocktails" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="cocktail[name]" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cocktail[ingredients]" placeholder="ingredients">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cocktail[recipe]" placeholder="recipe">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cocktail[image]" placeholder="image">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/cocktails">Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>