<% title = "Create new cocktail" %>
<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1>Create a new Cocktail</h1>
            <form action="/cocktails" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="cocktail[name]" placeholder="name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cocktail[ingredients]" placeholder="ingredients" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="3" id="textarea" name="cocktail[recipe]" placeholder="recipe" required></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cocktail[image]" placeholder="image URL" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/">Back</a>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

<% include ../partials/footer %>